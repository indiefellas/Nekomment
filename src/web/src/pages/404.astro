---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
    <div class="fill-screen error-page">
        <h1>Oh noes!</h1>
        <p>This page can't be found in our server!</p>
    </div>

    <style scoped>
        .error-page {
            --hero-margin: max(calc(50dvw - 960px), calc(var(--main-margin) / 2 + 15px));
            padding-inline: var(--hero-margin);
            padding-bottom: 16px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        h1 {
            font-size: min(calc(2vw + 2em), 6em);
            text-shadow:
                1px 1px var(--background-4),
                2px 2px var(--background-4),
                3px 3px var(--background-4),
                4px 4px var(--background-4),
                5px 5px var(--background-4)
        }

        @media screen and (width <= 640px) {
            .error-page {
                justify-content: end;
                padding-inline: 12px;
            }
        }
    </style>
</MainLayout>
